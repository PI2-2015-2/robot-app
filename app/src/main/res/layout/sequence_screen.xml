<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0">

                <ImageView
                    android:id="@+id/imageToDrop1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1">

                <ImageView
                    android:id="@+id/imageToDrop2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher_red" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2">

                <ImageView
                    android:id="@+id/imageToDrop3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher_blue" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3">

                <ImageView
                    android:id="@+id/imageToDrop4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher_purple" />

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_fixed_width_major"
        android:layout_below="@+id/tableLayout"
        android:layout_alignLeft="@+id/tableLayout"
        android:layout_alignStart="@+id/tableLayout"
        android:id="@+id/dragArea"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linha1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dragArea"
        android:layout_alignLeft="@+id/dragArea"
        android:layout_alignStart="@+id/dragArea">

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_play_arrow_black_24dp"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>
