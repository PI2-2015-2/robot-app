<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/prog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prog_dialog"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignRight="@+id/cancel_button_dialog"
        android:layout_alignEnd="@+id/cancel_button_dialog"
        android:layout_alignLeft="@+id/save_button_dialog"
        android:layout_alignStart="@+id/save_button_dialog" />

    <Button
        android:id="@+id/save_button_dialog"
        android:text=""
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/icon_confirmar"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/prog_text"
        android:layout_alignLeft="@+id/prog_dialog"
        android:paddingBottom="50dp" />

    <Button
        android:id="@+id/cancel_button_dialog"
        android:text=""
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_apagar"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/save_button_dialog"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="50dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_below="@+id/cancel_button_dialog"
        android:layout_centerHorizontal="true" />

</RelativeLayout>